.side-bar
  .side-bar__user-name
    .side-bar__user-name--top-items
      .side-bar__user-name--top-items__name
        = current_user.name
      .side-bar__user-name--top-items__icons
        .side-bar__user-name--top-items__icon1
          = link_to  new_group_path do
            = icon('far', 'edit', class:"side-bar__user-name--top-items__icons__new")
        .side-bar__user-name--top-items__icon2
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog' , class:"side-bar__user-name--top-items__icons__cog")
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message